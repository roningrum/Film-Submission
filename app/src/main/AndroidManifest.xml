<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="co.id.roni.filmsubmission">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <permission
        android:name="co.id.roni.filmsubmission.READ_DATABASE"
        android:protectionLevel="normal" />
    <permission
        android:name="co.id.roni.filmsubmission.WRITE_DATABASE"
        android:protectionLevel="normal" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">

        <provider
            android:name="co.id.roni.filmsubmission.contentprovider.MovieContentProvider"
            android:authorities="co.id.roni.filmsubmission"
            android:exported="true"
            android:readPermission="co.id.roni.film_submission.READ_DATABASE"
            android:writePermission="co.id.roni.film_submission.WRITE_DATABASE" />

        <receiver android:name="co.id.roni.filmsubmission.widget.MovieAppBannerWidget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/movie_app_banner_widget_info" />
        </receiver>

        <activity android:name="co.id.roni.filmsubmission.activity.SearchTVActivity" />
        <activity
            android:name="co.id.roni.filmsubmission.activity.SearchMovieActivity"
            android:parentActivityName="co.id.roni.filmsubmission.activity.MainHomeActivity" />
        <activity
            android:name="co.id.roni.filmsubmission.activity.SettingActivity"
            android:parentActivityName="co.id.roni.filmsubmission.activity.MainHomeActivity" />
        <activity
            android:name="co.id.roni.filmsubmission.activity.TVShowsDetailActivity"
            android:parentActivityName="co.id.roni.filmsubmission.activity.MainHomeActivity" />
        <activity android:name="co.id.roni.filmsubmission.activity.MainHomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="co.id.roni.filmsubmission.activity.MovieDetailActivity"
            android:parentActivityName="co.id.roni.filmsubmission.activity.MainHomeActivity" />

        <receiver android:name="co.id.roni.filmsubmission.widget.MovieAppBannerWidget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/movie_app_banner_widget_info" />
        </receiver>

        <receiver
            android:name="co.id.roni.filmsubmission.notification.DailyNotification"
            android:enabled="true"
            android:exported="true"
            tools:ignore="ExportedReceiver" />

        <receiver
            android:name="co.id.roni.filmsubmission.notification.ReleaseTodayReminder"
            android:enabled="true"
            android:exported="true"
            tools:ignore="ExportedReceiver" />
        <service
            android:name="co.id.roni.filmsubmission.widget.StackWidgetService"
            android:permission="android.permission.BIND_REMOTEVIEWS" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>